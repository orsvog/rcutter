doctype html
html
    head
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Rabbi cutter
        link(href="https://fonts.googleapis.com/css?family=Roboto", rel="stylesheet")
        link(href='./styles/main.css', rel='stylesheet')
        link(rel="shortcut icon", href="http://www.iconj.com/ico/z/1/z1iy5rqo7d.ico", type="image/x-icon")


    body
        h1 Welcome to Rabbi Cutter
        .p-l-40.m-b-20
            input.hide(type="file", id="js-fileinput", name="imageLoader", accept="image/jpeg,image/png,image/gif")
            label.btn(for="js-fileinput") Choose a file...
        .row
            .col.width-20
                h3 Crop shape:
                div.m-l-40
                    input(type="button", value="circle")
                    input.m-l-10(type="button", value="rectangle")
                div.m-l-40.m-t-20
                    input(type="button", value="download", onclick="downloadImage()")
            .col.width-80
                .rcutter
                    canvas(id="js-editorcanvas")
                a(href="/images/myw3schoolsimage.jpg", download)
                    canvas(id="js-previewcanvas")

        script(src="scripts/components/jquery/jquery-3.1.1.min.js")
        script(src="scripts/components/jquery/jquery-ui.js")
        script(src="scripts/components/rcutter/rcutter.js")
        script(src="scripts/main.js")